    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="Aqua"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
        </Style>

        <Style x:Key="DropMenu">
            <Setter Property="Control.FontSize" Value="17"/>
            <Setter Property="Control.Background" Value="LightBlue"/>
        </Style>

        <Style x:Key="DropMenuII">
            <Setter Property="Control.FontSize" Value="17"/>
            <Setter Property="Control.Background" Value="Azure"/>
        </Style>

        <Style x:Key="Header">
            <Setter Property="Control.FontSize" Value="17"/>
            <Setter Property="Control.FontFamily" Value="Times New Roman"/>
            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
            <Setter Property="Control.FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="ToolBar">
            <Setter Property="Background" Value="Azure"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="5, 0"/>
        </Style>

        <Style x:Key="Operacje">
            <Setter Property="Control.Background" Value="#0099ff"/>
        </Style>

        <Style x:Key="PrzestrzenRobocza">
            <Setter Property="Control.Background" Value="#00ccff"/>
        </Style>
    </Window.Resources>
    
