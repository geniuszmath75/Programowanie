    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="Azure"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="Gray"/>
           
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="StylPrzycisku">
            <Setter Property="Control.Width" Value="150"/>
            <Setter Property="Control.Height" Value="50"/>
            <Setter Property="Control.Background" Value="LightBlue"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="10">
            <Button Style="{StaticResource StylPrzycisku}">Przycisk 1</Button>
            <Label Content="TekstLabel" Style="{StaticResource StylPrzycisku}"/>
            <CheckBox Content="Tak" Style="{StaticResource StylPrzycisku}"/>
            <Button>Przycisk 2</Button>
            <Button Style="{StaticResource SpecialButton}">Przycisk 3</Button>
            <Button Style="{StaticResource ostateczny}">Przycisk 4</Button>
        </StackPanel>
    </Grid>
    
