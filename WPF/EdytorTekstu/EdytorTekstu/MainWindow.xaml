<Window x:Class="EdytorTekstu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EdytorTekstu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock 
            Grid.Column="0" 
            Grid.ColumnSpan="5"
            Foreground="{Binding Source={x:Reference KomboBox}, Path=Text}"
            FontSize="{Binding Source={x:Reference Slajder}, Path=Value}"
            Background="{Binding Source={x:Reference Slajder2}, Path=Value}"
            Style="{StaticResource TextBlock}"
            Text="{Binding Source={x:Reference TekstBox}, Path=Text}">
        </TextBlock>
        <Label
            Grid.Row="1"
            Content="Kolor tekstu:"
            Style="{StaticResource Label}"/>
        <ComboBox Grid.Row="2" x:Name="KomboBox" Style="{StaticResource ComboBox}">
            <ComboBoxItem IsSelected="True" >Black</ComboBoxItem>
            <ComboBoxItem>Green</ComboBoxItem>
            <ComboBoxItem>Yellow</ComboBoxItem>
            <ComboBoxItem>Red</ComboBoxItem>

        </ComboBox>
        <Label 
            Grid.Row="1"
            Grid.Column="2"
            Style="{StaticResource Label}"
            Content="Wielkość tekstu: "/>
        <Slider
            x:Name="Slajder"
            Grid.Row="2"
            Grid.Column="2"
            Minimum="1"
            Maximum="61"
            Value="30"
            Style="{StaticResource Slider}"/>

        <Label
            Grid.Row="1"
            Grid.Column="4"
            Content="Czcionka:"
            Style="{StaticResource Label}"/>

        <ListBox
            Grid.Row="2"
            Grid.Column="4"
            >
            
        </ListBox>

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Content="Kolor tła:"
            Style="{StaticResource Label}"/>

        <StackPanel Grid.Row="4" Grid.Column="0" x:Name="PanelKolory">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Slider
                    x:Name="Slajder2"
                    Minimum="0"
                    Maximum="255"
                    Value="0"/>

                <Slider
                    Grid.Row="2"
                    x:Name="Slajder3"
                    Minimum="0"
                    Maximum="255"
                    Value="0"/>

                <Slider
                    Grid.Row="4"
                    x:Name="Slajder4"
                    Minimum="0"
                    Maximum="255"
                    Value="0"/>
            </Grid>
        </StackPanel>

        <Label
            Grid.Row="3"
            Grid.Column="2"
            Content="Tekst wyświetlany:"
            Style="{StaticResource Label}"/>

        <TextBox
            x:Name="TekstBox"
            Grid.Row="4"
            Grid.Column="2"
            Text="Nowy Tekst do edytowania"
            Style="{StaticResource TextBox}"/>

        <Label
            Grid.Row="3"
            Grid.Column="5"
            Content="Krój czcionki:"
            Style="{StaticResource Label}"/>

        <ListBox
            Grid.Row="4"
            Grid.Column="5"
            SelectionMode="Single">
        </ListBox>
    </Grid>
        
</Window>
